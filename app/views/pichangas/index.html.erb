<h1>Pichangas</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Titulo</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pichangas.each do |pichanga| %>
      <tr>
        <td><%= pichanga.id %></td>
        <td><%= link_to pichanga.titulo, pichanga_path(pichanga) %></td>
        <td><%= pichanga.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_pichanga_path(pichanga), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', pichanga_path(pichanga), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_pichanga_path, :class => 'btn btn-primary' %>
